# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Set Outputs
set $LAPTOP "eDP1"
set $EXTERNAL "HDMI2"
set $VGAOUT "DP1"

# Set Workspace Names
set $WS1 "1:MAIN"
set $WS2 "2:MEDIA"
set $WS3 "3:DEVEL"
set $WS4 "4:GAMES"
set $WS5 "5:LPTP5"
set $WS6 "6:LPTP6"
set $WS7 "7:LPTP7"
set $WS8 "8:LPTP8"
set $WS9 "9:LPTP9"
set $WSA "10:LPTP0"
set $WSB "11:ALT"
set $WSC "12:VIDEO"
set $WSD "13:DOCS"
set $WSE "14:HDMI4"
set $WSF "15:HDMI5"
set $WSG "16:HDMI6"
set $WSH "17:HDMI7"
set $WSI "18:HDMI8"
set $WSJ "19:HDMI9"
set $WSK "20:HDMI0"
set $WSV "21:VGAOUT"

# Set Workspace Outputs
workspace $WS1 output $LAPTOP
workspace $WS2 output $LAPTOP
workspace $WS3 output $LAPTOP
workspace $WS4 output $LAPTOP
workspace $WS5 output $LAPTOP
workspace $WS6 output $LAPTOP
workspace $WS7 output $LAPTOP
workspace $WS8 output $LAPTOP
workspace $WS9 output $LAPTOP
workspace $WSA output $LAPTOP
workspace $WSB output $EXTERNAL
workspace $WSC output $EXTERNAL
workspace $WSD output $EXTERNAL
workspace $WSE output $EXTERNAL
workspace $WSF output $EXTERNAL
workspace $WSG output $EXTERNAL
workspace $WSH output $EXTERNAL
workspace $WSI output $EXTERNAL
workspace $WSJ output $EXTERNAL
workspace $WSK output $EXTERNAL
workspace $WSV output $VGAOUT

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace,FontAwesome 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec urxvt -e zsh
bindsym $mod+Shift+Return exec urxvt -e bash

# kill focused window
bindsym $mod+Shift+q kill
# for when the window is subborn...
bindsym $mod+Control+Shift+q exec kill -9 $(xdotool getactivewindow getwindowpid)

# start rofi (a program launcher)
bindsym $mod+d exec "rofi -show run -modi window,run"

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right
bindsym $mod+Control+j focus output left
bindsym $mod+Control+semicolon focus output right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Control+Left focus output left
bindsym $mod+Control+Right focus output right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right
bindsym $mod+Control+Shift+j move container to output left
bindsym $mod+Control+Shift+semicolon move container to output right
bindsym $mod+Control+Shift+k move workspace to output left
bindsym $mod+Control+Shift+l move workspace to output right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Control+Shift+Left move container to output left
bindsym $mod+Control+Shift+Right move container to output right
bindsym $mod+Control+Shift+Up move workspace to output left
bindsym $mod+Control+Shift+Down move workspace to output right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
bindsym $mod+g fullscreen toggle global

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# focus settings
focus_follows_mouse no
mouse_warping none

# move cursor to the bottom out of the way
bindsym $mod+c exec xdotool mousemove 0 1079

# allow the pointer to be locked/unlocked
bindsym $mod+z exec ~/.local/share/bin/enablepointer toggle

# workspace settings
workspace_auto_back_and_forth yes

# switch to workspace
bindsym $mod+1 workspace number $WS1
bindsym $mod+2 workspace number $WS2
bindsym $mod+3 workspace number $WS3
bindsym $mod+4 workspace number $WS4
bindsym $mod+5 workspace number $WS5
bindsym $mod+6 workspace number $WS6
bindsym $mod+7 workspace number $WS7
bindsym $mod+8 workspace number $WS8
bindsym $mod+9 workspace number $WS9
bindsym $mod+0 workspace number $WSA
bindsym $mod+Mod1+1 workspace number $WSB
bindsym $mod+Mod1+2 workspace number $WSC
bindsym $mod+Mod1+3 workspace number $WSD
bindsym $mod+Mod1+4 workspace number $WSE
bindsym $mod+Mod1+5 workspace number $WSF
bindsym $mod+Mod1+6 workspace number $WSG
bindsym $mod+Mod1+7 workspace number $WSH
bindsym $mod+Mod1+8 workspace number $WSI
bindsym $mod+Mod1+9 workspace number $WSJ
bindsym $mod+Mod1+0 workspace number $WSK
bindsym $mod+Mod1+v workspace number $WSV

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $WS1; workspace number $WS1
bindsym $mod+Shift+2 move container to workspace number $WS2; workspace number $WS2
bindsym $mod+Shift+3 move container to workspace number $WS3; workspace number $WS3
bindsym $mod+Shift+4 move container to workspace number $WS4; workspace number $WS4
bindsym $mod+Shift+5 move container to workspace number $WS5; workspace number $WS5
bindsym $mod+Shift+6 move container to workspace number $WS6; workspace number $WS6
bindsym $mod+Shift+7 move container to workspace number $WS7; workspace number $WS7
bindsym $mod+Shift+8 move container to workspace number $WS8; workspace number $WS8
bindsym $mod+Shift+9 move container to workspace number $WS9; workspace number $WS9
bindsym $mod+Shift+0 move container to workspace number $WSA; workspace number $WSA
bindsym $mod+Mod1+Shift+1 move container to workspace number $WSB; workspace number $WSB
bindsym $mod+Mod1+Shift+2 move container to workspace number $WSC; workspace number $WSC
bindsym $mod+Mod1+Shift+3 move container to workspace number $WSD; workspace number $WSD
bindsym $mod+Mod1+Shift+4 move container to workspace number $WSE; workspace number $WSE
bindsym $mod+Mod1+Shift+5 move container to workspace number $WSF; workspace number $WSF
bindsym $mod+Mod1+Shift+6 move container to workspace number $WSG; workspace number $WSG
bindsym $mod+Mod1+Shift+7 move container to workspace number $WSH; workspace number $WSH
bindsym $mod+Mod1+Shift+8 move container to workspace number $WSI; workspace number $WSI
bindsym $mod+Mod1+Shift+9 move container to workspace number $WSJ; workspace number $WSJ
bindsym $mod+Mod1+Shift+0 move container to workspace number $WSK; workspace number $WSK
bindsym $mod+Mod1+Shift+v move container to workspace number $WSV; workspace number $WSV

# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
bindsym $mod+Control+minus exec i3-input -F '[%s] scratchpad show' -P 'Scratchpad: '

# sticky
bindsym $mod+equal sticky toggle

# rename
bindsym $mod+Shift+equal exec bash -c "i3-input -F 'rename workspace to \"$(~/.local/share/bin/i3-get-workspace prefix)%s\"' -P 'Name (retain number): '"
bindsym $mod+Control+equal exec i3-input -F 'rename workspace to "%s"' -P 'Name: '

# marks
bindsym $mod+Shift+m exec i3-input -F 'mark %s' -P 'Mark: '
bindsym $mod+m exec i3-input -F '[con_mark="^%s$"] focus' -P 'Go to: '
bindsym $mod+Control+m exec i3-input -F 'unmark %s' -P 'Mark: '

# audio
bindsym XF86AudioMute exec "amixer sset Master,0 toggle"
bindsym XF86AudioRaiseVolume exec "amixer sset Master,0 500+"; exec "amixer sset Master,0 $(amixer sget Master,0 | grep -P -o 'Left:\s*Playback\s*\d+' | cut -d' ' -f3)"
bindsym XF86AudioLowerVolume exec "amixer sset Master,0 500-"; exec "amixer sset Master,0 $(amixer sget Master,0 | grep -P -o 'Left:\s*Playback\s*\d+' | cut -d' ' -f3)"
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next

# Rofi
bindsym $mod+grave exec bash -c "pactl set-default-sink "$(pactl list sinks | grep Name | cut -d" " -f2 | rofi -dmenu -p "Default Sink")
bindsym $mod+Tab exec "rofi -show window -modi window,run"

# border settings
new_window pixel 1
bindsym $mod+F12 border toggle

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Lock
bindsym Control+Mod1+l exec i3lock -c 111111

# Screenshot
bindsym --release $mod+t exec --no-startup-id import -window-id `xdotool getactivewindow` ~/Pictures/screenshot-`/bin/date +%Y%m%d-%H:%M:%S`.png
bindsym --release $mod+y exec --no-startup-id import -window root ~/Pictures/screenshot-`/bin/date +%Y%m%d-%H:%M:%S`.png

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# mode launcher
mode "launcher" {
        # Web + Files
        bindsym b exec vivaldi-stable; mode "default"
        bindsym c exec chromium --incognito; mode "default"
        bindsym f exec firefox; mode "default"
        bindsym g exec google-chrome-stable --incognito; mode "default"
        bindsym h exec chromium --app=http://www.accuweather.com/en/us/pittsburgh-pa/15213/hourly-weather-forecast/1310; mode "default"
        bindsym n exec thunar; mode "default"
        bindsym o exec bash -c "GTK2_RC_FILES=/usr/share/themes/Vertex-Light/gtk-2.0/gtkrc opera-developer"; mode "default"
        bindsym r exec urxvt -name ranger -e ranger; mode "default"
        bindsym x exec ~/opt/xfinitytv; mode "default"

        # Shell + Editors
        bindsym a exec urxvt -name agenda -e ~/.local/share/bin/agenda; mode "default"
        bindsym p exec urxvt -name rsfpac -e ~/.local/share/bin/rsfpac; mode "default"
        bindsym v exec urxvt -name vim -e vim; mode "default"

        # Misc
        bindsym s exec spotify; mode "default"
        bindsym t exec corebird; mode "default"

        # Gaming
        bindsym e exec ~/opt/steam-wine64; mode "default"
        bindsym w exec steam-native; mode "default"

        # Back to normal
        bindsym Return mode "default"
        bindsym Escape mode "default"

        # Available Letters: ---d----ijklm---q---u---yz
        # Available Numbers: 1234567890
}

bindsym $mod+o mode "launcher"

# video modes
mode "video" {
        # Just laptop
        bindsym q exec xrandr --output $LAPTOP --primary --mode 1920x1080 --pos 0x0 --output $EXTERNAL --off --output $VGAOUT --off

        # Laptop + HDMI
        bindsym w exec xrandr --output $LAPTOP --primary --mode 1920x1080 --pos 0x0 --output $EXTERNAL --mode 1920x1080 --pos 1920x0 --output $VGAOUT --off

        # Laptop + VGA
        bindsym e exec xrandr --output $LAPTOP --primary --mode 1920x1080 --pos 0x0 --output $EXTERNAL --off --output $VGAOUT --mode 1024x768 --pos 1920x0

        # Clone Laptop to HDMI
        bindsym r exec xrandr --output $LAPTOP --primary --mode 1920x1080 --pos 0x0 --output $EXTERNAL --mode 1920x1080 --pos 0x0 --output $VGAOUT --off

        # Clone Laptop to VGA
        bindsym t exec xrandr --output $LAPTOP --primary --mode 1024x768 --pos 0x0 --output $EXTERNAL --off --output $VGAOUT --mode 1024x768 --pos 0x0

        # Back to normal
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+i mode "video"

# restore workspaces
mode "restore" {
        # All
        bindsym grave exec /home/brian/.local/share/bin/i3-restore-workspace -; mode "default"

        # Current
        bindsym space exec /home/brian/.local/share/bin/i3-restore-workspace; mode "default"

        # Specifics
        bindsym 1 exec /home/brian/.local/share/bin/i3-restore-workspace "$WS1"; mode "default"
        bindsym 2 exec /home/brian/.local/share/bin/i3-restore-workspace "$WS2"; mode "default"
        bindsym 3 exec /home/brian/.local/share/bin/i3-restore-workspace "$WS3"; mode "default"
        bindsym 4 exec /home/brian/.local/share/bin/i3-restore-workspace "$WS4"; mode "default"
        bindsym 5 exec /home/brian/.local/share/bin/i3-restore-workspace "$WS5"; mode "default"
        bindsym 6 exec /home/brian/.local/share/bin/i3-restore-workspace "$WS6"; mode "default"
        bindsym 7 exec /home/brian/.local/share/bin/i3-restore-workspace "$WS7"; mode "default"
        bindsym 8 exec /home/brian/.local/share/bin/i3-restore-workspace "$WS8"; mode "default"
        bindsym 9 exec /home/brian/.local/share/bin/i3-restore-workspace "$WS9"; mode "default"
        bindsym 0 exec /home/brian/.local/share/bin/i3-restore-workspace "$WSA"; mode "default"
        bindsym Mod1+1 exec /home/brian/.local/share/bin/i3-restore-workspace "$WSB"; mode "default"
        bindsym Mod1+2 exec /home/brian/.local/share/bin/i3-restore-workspace "$WSC"; mode "default"
        bindsym Mod1+3 exec /home/brian/.local/share/bin/i3-restore-workspace "$WSD"; mode "default"
        bindsym Mod1+4 exec /home/brian/.local/share/bin/i3-restore-workspace "$WSE"; mode "default"
        bindsym Mod1+5 exec /home/brian/.local/share/bin/i3-restore-workspace "$WSF"; mode "default"
        bindsym Mod1+6 exec /home/brian/.local/share/bin/i3-restore-workspace "$WSG"; mode "default"
        bindsym Mod1+7 exec /home/brian/.local/share/bin/i3-restore-workspace "$WSH"; mode "default"
        bindsym Mod1+8 exec /home/brian/.local/share/bin/i3-restore-workspace "$WSI"; mode "default"
        bindsym Mod1+9 exec /home/brian/.local/share/bin/i3-restore-workspace "$WSJ"; mode "default"
        bindsym Mod1+0 exec /home/brian/.local/share/bin/i3-restore-workspace "$WSK"; mode "default"
        bindsym Mod1+v exec /home/brian/.local/share/bin/i3-restore-workspace "$WSV"; mode "default"

        # Back to normal
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Escape mode "restore"

# android stuff
mode "android" {
        # AirDroid
        bindsym a exec vivaldi-stable --app=http://web.airdroid.com

        # Show battery
        bindsym b exec notify-send "Galaxy S7" "Battery: "$(adb shell "dumpsys battery" | grep level | cut -d' ' -f4)"%"; mode "default"

        # Toggle display
        bindsym d exec adb shell input keyevent 26; mode "default"

        # Back to normal
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+b mode "android"

