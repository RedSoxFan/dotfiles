## End App Settings##

# Start i3blocks
bar {
        colors {
                background #111111
                statusline #ffffff
                separator #444444
                focused_background #111111
                focused_statusline #ffffff
                focused_separator #444444

                focused_workspace #666666 #666666 #ffffff
                active_workspace #444444 #444444 #ffffff
                inactive_workspace #222222 #222222 #ffffff
                urgent_workspace #111111 #111111 #ff0000

                binding_mode #ffffff #111111 #ffffff
        }

        strip_workspace_numbers yes
        status_command i3blocks
        output $LAPTOP
        tray_output primary
}

bar {
        colors {
                background #111111
                statusline #ffffff
                separator #444444
                focused_background #111111
                focused_statusline #ffffff
                focused_separator #444444

                focused_workspace #666666 #666666 #ffffff
                active_workspace #444444 #444444 #ffffff
                inactive_workspace #222222 #222222 #ffffff
                urgent_workspace #111111 #111111 #ff0000

                binding_mode #ffffff #111111 #ffffff
        }

        strip_workspace_numbers yes
        status_command i3blocks -c /home/brian/.config/i3blocks/config-external
        output $EXTERNAL
        output $VGAOUT
        tray_output primary
}

# Startup
exec --no-startup-id "amixer -c sset Master,0 87"
exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet
exec --no-startup-id pulseaudio -D
exec --no-startup-id onedrive-d start
exec --no-startup-id xset s 18000 18000
exec --no-startup-id xset -dpms
exec_always --no-startup-id numlockx on
exec_always --no-startup-id xrandr --output $EXTERNAL --mode 1920x1080 --pos 1920x0
exec_always --no-startup-id feh --bg-fill ~/.wallpaper
exec_always --no-startup-id synclient VertEdgeScroll=1
exec_always --no-startup-id synclient TapButton1=1

