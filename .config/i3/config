## App Settings ##

# Agenda
for_window [class="URxvt" instance="agenda"] floating enable
for_window [class="URxvt" instance="agenda"] sticky enable
for_window [class="URxvt" instance="agenda"] move scratchpad
for_window [class="URxvt" instance="agenda"] scratchpad show
for_window [class="URxvt" instance="agenda"] mark "a"
for_window [class="URxvt" instance="agenda"] move absolute position 180 px 180 px
for_window [class="URxvt" instance="agenda"] resize set 600 px 720 px

# Corebird
for_window [class="Corebird" window_type="dialog"] fullscreen

# rsfpac
for_window [class="URxvt" instance="rsfpac"] floating enable
for_window [class="URxvt" instance="rsfpac"] sticky enable
for_window [class="URxvt" instance="rsfpac"] move scratchpad
for_window [class="URxvt" instance="rsfpac"] mark "r"
for_window [class="URxvt" instance="rsfpac"] move absolute position 1020 px 65 px
for_window [class="URxvt" instance="rsfpac"] resize set 820 px 950 px

