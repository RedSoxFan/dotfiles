# sway config file - man sway.5

# Preferences
set $mod Mod4
set $sec Mod1
set $term urxvt -e zsh
set $menu dmenu_run
set $prompt echo | dmenu -p
set $environ GTK_THEME=Vertex-Dark

# Device names
set $LAPTOP eDP-1
set $HDMI HDMI-A-2
set $VGA DP-1
set $TOUCHPAD 1267:5:Elan_Touchp

# Workspace names
set $WSL1 "1:MAIN"
set $WSL2 "2:MEDIA"
set $WSL3 "3:DEVEL"
set $WSL4 "4:GAMES"
set $WSL5 "5:LPTP5"
set $WSL6 "6:LPTP6"
set $WSL7 "7:LPTP7"
set $WSL8 "8:LPTP8"
set $WSL9 "9:LPTP9"
set $WSL0 "10:TMP0"
set $WSH1 "11:ALT"
set $WSH2 "12:VIDEO"
set $WSH3 "13:DOCS"
set $WSH4 "14:HDMI4"
set $WSH5 "15:HDMI5"
set $WSH6 "16:HDMI6"
set $WSH7 "17:HDMI7"
set $WSH8 "18:HDMI8"
set $WSH9 "19:HDMI9"
set $WSH0 "20:HDMI0"
set $WSVG "21:VGAOUT"

# Input configuration
input $TOUCHPAD {
    dwt enabled
    natural_scroll disabled
    scroll_method edge
    tap enabled
}

# Output configuration
output $LAPTOP resolution 1920x1080 position 0,0 bg ~/.wallpaper fill
output $HDMI resolution 1920x1080 position 1920,0 bg ~/.wallpaper fill

# Set Workspace Outputs
workspace $WSL1 output $LAPTOP
workspace $WSL2 output $LAPTOP
workspace $WSL3 output $LAPTOP
workspace $WSL4 output $LAPTOP
workspace $WSL5 output $LAPTOP
workspace $WSL6 output $LAPTOP
workspace $WSL7 output $LAPTOP
workspace $WSL8 output $LAPTOP
workspace $WSL9 output $LAPTOP
workspace $WSL0 output $LAPTOP
workspace $WSH1 output $HDMI
workspace $WSH2 output $HDMI
workspace $WSH3 output $HDMI
workspace $WSH4 output $HDMI
workspace $WSH5 output $HDMI
workspace $WSH6 output $HDMI
workspace $WSH7 output $HDMI
workspace $WSH8 output $HDMI
workspace $WSH9 output $HDMI
workspace $WSH0 output $HDMI
workspace $WSVG output $VGA

# Font for window titles and swaybar
font pango:monospace,FontAwesome 8

# Allow floating windows to be moved with LMB+$mod and resized with RMB+$mod
floating_modifier $mod

# Launch a terminal
bindsym $mod+Return exec $environ $term

# Kill focused window
bindsym $mod+Shift+q kill

# Launch the run menu
bindsym $mod+d exec $environ $menu

# Move the window focus with home row
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Control+h focus output left
bindsym $mod+Control+l focus output right
# or with arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Control+Left focus output left
bindsym $mod+Control+Right focus output right

# Move the focused element with home row
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Control+Shift+h move container to output left
bindsym $mod+Control+Shift+l move container to output right
bindsym $mod+Control+Shift+j move workspace to output left
bindsym $mod+Control+Shift+k move workspace to output right
# or with arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Control+Shift+Left move container to output left
bindsym $mod+Control+Shift+Right move container to output right
bindsym $mod+Control+Shift+Up move workspace to output left
bindsym $mod+Control+Shift+Down move workspace to output right

# Switch layout and viewing modes
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+Shift+space floating toggle

# Toggle focus between tiling and floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Focus settings
focus_follows_mouse no
mouse_warping no

# Workspace settings
workspace_auto_back_and_forth yes

# Switch to workspace
bindsym $mod+1 workspace $WSL1
bindsym $mod+2 workspace $WSL2
bindsym $mod+3 workspace $WSL3
bindsym $mod+4 workspace $WSL4
bindsym $mod+5 workspace $WSL5
bindsym $mod+6 workspace $WSL6
bindsym $mod+7 workspace $WSL7
bindsym $mod+8 workspace $WSL8
bindsym $mod+9 workspace $WSL9
bindsym $mod+0 workspace $WSL0
bindsym $mod+Mod1+1 workspace $WSH1
bindsym $mod+Mod1+2 workspace $WSH2
bindsym $mod+Mod1+3 workspace $WSH3
bindsym $mod+Mod1+4 workspace $WSH4
bindsym $mod+Mod1+5 workspace $WSH5
bindsym $mod+Mod1+6 workspace $WSH6
bindsym $mod+Mod1+7 workspace $WSH7
bindsym $mod+Mod1+8 workspace $WSH8
bindsym $mod+Mod1+9 workspace $WSH9
bindsym $mod+Mod1+0 workspace $WSH0
bindsym $mod+p workspace $WSVG

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $WSL1; workspace $WSL1
bindsym $mod+Shift+2 move container to workspace $WSL2; workspace $WSL2
bindsym $mod+Shift+3 move container to workspace $WSL3; workspace $WSL3
bindsym $mod+Shift+4 move container to workspace $WSL4; workspace $WSL4
bindsym $mod+Shift+5 move container to workspace $WSL5; workspace $WSL5
bindsym $mod+Shift+6 move container to workspace $WSL6; workspace $WSL6
bindsym $mod+Shift+7 move container to workspace $WSL7; workspace $WSL7
bindsym $mod+Shift+8 move container to workspace $WSL8; workspace $WSL8
bindsym $mod+Shift+9 move container to workspace $WSL9; workspace $WSL9
bindsym $mod+Shift+0 move container to workspace $WSL0; workspace $WSL0
bindsym $mod+Mod1+Shift+1 move container to workspace $WSH1; workspace $WSH1
bindsym $mod+Mod1+Shift+2 move container to workspace $WSH2; workspace $WSH2
bindsym $mod+Mod1+Shift+3 move container to workspace $WSH3; workspace $WSH3
bindsym $mod+Mod1+Shift+4 move container to workspace $WSH4; workspace $WSH4
bindsym $mod+Mod1+Shift+5 move container to workspace $WSH5; workspace $WSH5
bindsym $mod+Mod1+Shift+6 move container to workspace $WSH6; workspace $WSH6
bindsym $mod+Mod1+Shift+7 move container to workspace $WSH7; workspace $WSH7
bindsym $mod+Mod1+Shift+8 move container to workspace $WSH8; workspace $WSH8
bindsym $mod+Mod1+Shift+9 move container to workspace $WSH9; workspace $WSH9
bindsym $mod+Mod1+Shift+0 move container to workspace $WSH0; workspace $WSH0
bindsym $mod+Shift+p move container to workspace $WSVG; workspace $WSVP

# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Sticky
bindsym $mod+equal stick toggle

# Marks
bindsym $mod+Shift+m exec $environ $prompt Mark | xargs swaymsg mark
bindsym $mod+m exec $environ $prompt 'Go To' | xargs -I {} swaymsg '[con_mark="^{}$"] focus'
bindsym $mod+Control+m exec $environ $prompt Unmark | xargs swaymsg unmark

# Audio
set $RSFPAC ~/.local/share/bin/rsfpac
bindsym XF86AudioMute exec $environ $RSFPAC sm - t
bindsym XF86AudioRaiseVolume exec $environ $RSFPAC svr - 5
bindsym Shift+XF86AudioRaiseVolume exec $environ $RSFPAC svr - 1
bindsym XF86AudioLowerVolume exec $environ $RSFPAC svr - -5
bindsym Shift+XF86AudioLowerVolume exec $environ $RSFPAC svr - -1
bindsym XF86AudioPlay exec $environ playerctl play-pause
bindsym XF86AudioStop exec $environ playerctl stop
bindsym XF86AudioPrev exec $environ playerctl previous
bindsym XF86AudioNext exec $environ playerctl next

# Border settings
new_window pixel 1
bindsym $mod+F12 border toggle

# Reload the configuration file
bindsym $mod+Shift+c reload
# Logout
bindsym $mod+Shift+e exit
# Lock
bindsym Control+$sec+l exec $environ swaylock -c 111111

# Screenshot + Recording
bindsym $mod+t exec $environ swaygrab -f ~/Pictures/screenshot-`/bin/date +%Y%m%d-%H:%M:%S`.png
bindsym $mod+y exec $environ swaygrab ~/Pictures/screenshot-`/bin/date +%Y%m%d-%H:%M:%S`.png
bindsym $mod+Shift+t exec $environ swaygrab -c -f ~/Videos/recording-`/bin/date +%Y%m%d-%H:%M:%S`.mp4
bindsym $mod+Shift+y exec $environ swaygrab -c ~/Videos/recording-`/bin/date +%Y%m%d-%H:%M:%S`.mp4
bindsym $mod+Control+t exec $environ killall swaygrab

## Modes ##

mode "resize" {
    # Grow/Shrink in either direction with home row
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    # or with arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode "launcher" {
    # Web + Files
    bindsym b exec $environ vivaldi-stable; mode "default"
    bindsym c exec $environ chromium --incognito; mode "default"
    bindsym f exec $environ firefox; mode "default"
    bindsym g exec $environ google-chrome-stable --incognito; mode "default"
    bindsym h exec $environ chromium --app=http://www.accuweather.com/en/us/nashua-nh/03064/hourly-weather-forecast/1310; mode "default"
    bindsym n exec $environ thunar; mode "default"
    bindsym o exec $environ bash -c "GTK2_RC_FILES=/usr/share/themes/Vertex-Light/gtk-2.0/gtkrc opera-developer"; mode "default"
    bindsym r exec $environ urxvt -e ranger; mode "default"

    # Shell + Editors
    bindsym a exec $environ urxvt -e ~/.local/share/bin/agenda; mode "default"
    bindsym p exec $environ urxvt -e ~/.local/share/bin/rsfpac; mode "default"
    bindsym v exec $environ urxvt -e vim; mode "default"

    # Documents
    bindsym l exec libreoffice -writer; mode "default"

    # Misc
    bindsym s exec $environ spotify; mode "default"
    bindsym t exec $environ corebird; mode "default"

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"

    # Available Letters: ---de---ijk-m---q---u-wxyz
    # Available Numbers: 1234567890
}
bindsym $mod+o mode "launcher"

# Colors                    border  back    text    ind     child
client.focused              #666666 #222222 #ffffff #444444 #666666
client.focused_inactive     #222222 #222222 #ffffff #222222 #222222
client.unfocused            #111111 #111111 #ffffff #111111 #000000
client.urgent               #881000 #881000 #000000 #881000 #881000
client.background           #111111

# Status
bar {
    colors {
        background #111111
        statusline #ffffff
        separator #444444
        focused_background #111111
        focused_statusline #ffffff
        focused_separator #444444

        focused_workspace #666666 #666666 #ffffff
        active_workspace #444444 #444444 #ffffff
        inactive_workspace #222222 #222222 #ffffff
        urgent_workspace #111111 #111111 #ff0000

        binding_mode #ffffff #111111 #ffffff
    }

    strip_workspace_numbers yes
    separator_symbol "   "
    status_command i3blocks -c /home/brian/.config/i3blocks/config-sway
    tray_output $LAPTOP
}

# Startup
exec $environ "amixer -c sset Master,0 87"
exec $environ pulseaudio -D
exec $environ onedrive-d start
exec $environ dunst

include /etc/sway/config.d/*

